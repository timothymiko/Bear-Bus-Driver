<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dip"
        android:background="#ddd">

        <TextView
            android:id="@+id/pickup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup: "
            android:layout_marginTop="12dip"
            android:layout_marginRight="8dip"
            android:layout_marginLeft="16dip"
            android:layout_marginBottom="4dip"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/pickup_title"
            android:layout_toRightOf="@id/pickup_title"
            android:layout_marginTop="8dip"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dropoff_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dropoff: "
            android:layout_marginTop="4dip"
            android:layout_marginRight="4dip"
            android:layout_marginLeft="16dip"
            android:layout_marginBottom="12dip"
            android:layout_below="@id/pickup_title"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dropoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pickup"
            android:layout_alignBaseline="@id/dropoff_title"
            android:layout_marginTop="8dip"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nav_accept"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="12dip"
            android:layout_centerVertical="true"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/disapprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nav_cancel"
            android:layout_toLeftOf="@id/approve"
            android:layout_margin="8dip"
            android:layout_centerVertical="true"
            android:clickable="true"/>

    </RelativeLayout>
</RelativeLayout>